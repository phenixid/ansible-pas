[Unit]
Description=DIGO
After=network.target

[Service]
Type=forking
WorkingDirectory={{ digo_home }}
ExecStart={{ digo_home }}/start.sh
User={{ user }}
Group={{ group }}
UMask=0007
Restart={{ service_restart | default('always') }}
RestartSec={{ service_restart_sec | default(60) }}
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target